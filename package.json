{
  "name": "creatures",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "./apps/client",
    "./apps/server",
    "./packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=@creatures/client",
    "dev:server": "npm run dev --workspace=@creatures/server",
    "build:client": "npm run build --workspace=@creatures/client",
    "build": "npm run build:client",
    "start": "npm run start --workspace=@creatures/server",
    "preview:client": "npm run preview --workspace=@creatures/client",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "typecheck:client": "npm run typecheck --workspace=@creatures/client",
    "typecheck:server": "npm run typecheck --workspace=@creatures/server",
    "format": "npm run format --workspace=@creatures/client",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "typescript-eslint": "^8.54.0"
  }
}
